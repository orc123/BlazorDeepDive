
<div data-name="@server.Name" data-status="Server is @(server.IsOnline ? "online" : "offiline")"
     style="@($"color:{(server.IsOnline ? "green" : "red")}")">
    @server.Name is in @server.City that is @(server.IsOnline ? "online" : "offiline")
</div>

@code {
    private Server server = new Server
        {
            Name = "Server 1",
            City = "Toronto"
        };
}
